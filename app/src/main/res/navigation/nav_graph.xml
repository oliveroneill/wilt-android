<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/walkthroughFragment">

    <fragment
        android:id="@+id/walkthroughFragment"
        android:name="com.oliveroneill.wilt.ui.WalkthroughFragment"
        android:label="Welcome To Wilt"
        tools:layout="@layout/walkthrough_fragment">
        <action
            android:id="@+id/action_login_failure"
            app:destination="@id/loginErrorFragment" />
        <action
            android:id="@+id/action_login"
            app:destination="@id/historyFragment"
            app:popUpTo="@+id/nav_graph" />
    </fragment>

    <fragment
        android:id="@+id/loginErrorFragment"
        android:name="com.oliveroneill.wilt.ui.LoginErrorFragment"
        android:label="Login Error"
        tools:layout="@layout/login_error" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.oliveroneill.wilt.ui.PlayHistoryFragment"
        android:label="Your Top Artists Per Week"
        tools:layout="@layout/history_screen" />
</navigation>